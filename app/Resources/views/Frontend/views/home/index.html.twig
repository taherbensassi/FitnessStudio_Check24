{% extends ':Frontend/views:base.html.twig' %}
{% block stylesheets %}
<style>
    label{
        float: left;
    }
</style>

{% endblock %}

{% block body %}

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h4 class="mt-5">Suchen</h4>





                        <form method="post" action="{{ path('SearchAction') }}">
                            <div class="form-group">
                                <label for="stadt">Stadt: *</label>
                                <input class="typestadt form-control full-width"  required type="text" name="typestadt">
                            </div>


                            <div class="form-group">
                                <label for="Preis">Minumum Preis: (€)</label>
                                <input type="number" class="form-control" id="minPreis" name="minPreis">
                            </div>

                            <div class="form-group">
                                <label for="Preis">Maximum Preis: (€)</label>
                                <input type="number" class="form-control" id="maxPreis" name="maxPreis">
                            </div>



                            <div class="form-group">
                                <label for="sel1">Trainer: *</label>
                                <select class="form-control" id="sel1" required name="trainer">
                                    <option value="Ja">Ja</option>
                                    <option value="Nein">Nein</option>
                                    <option value="nur an Werktagen">Nur Werktagen</option>
                                    <option value="nur an Wochenenden">Nur Wochenenden</option>
                                </select>
                            </div>


                            <div class="form-group">
                                <label for="sel1">Offnen Zeit: 24studenden *</label>
                                <select class="form-control" required name="stunden">
                                    <option value="1">Ja</option>
                                    <option value="0">Nein</option>

                                </select>
                            </div>


                            <input type="submit" class="btn btn-primary" value="Suchen" style="float: right">
                        </form>





            </div>
        </div>
    </div>



{% endblock %}
{% block javascripts %}

    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('bundles/frontend/bootstrap-typeahead.js') }}" type="text/javascript"></script>

    <script>
        $(document).ready( function () {
            $('input.typestadt').typeahead({
                ajax: Routing.generate('getliststadt')
            });
        });
    </script>
{% endblock %}
